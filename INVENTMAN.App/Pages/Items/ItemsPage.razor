@page "/equipment"
@using INVENTMAN.App.Components.Items
@using INVENTMAN.Entities
@using INVENTMAN.UseCases.Equipment.Interfaces

@inject IEquipmentSearchUseCase EquipmentSearchUseCase
@inject NavigationManager NavigationManager

@code{


    public string searchPhrase { get; set; } = string.Empty;

    private void OnInventorySearch(string searchPhrase)
    {
        this.searchPhrase = searchPhrase;
    }

    private void AddItem()
    {
        NavigationManager.NavigateTo("/equipment/add");
    }
}

<PageTitle>Inventory Page</PageTitle>
<SearchInventoryComponent 
    OnSearchInventory="OnInventorySearch">
</SearchInventoryComponent>

<InventoryListComponent searchPhrase="@searchPhrase" >
</InventoryListComponent>
<br />

<button
    class="btn-primary"
    type="button"
    @onclick="AddItem"
    >Add Item</button>


   
    

